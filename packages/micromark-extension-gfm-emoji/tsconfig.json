{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
